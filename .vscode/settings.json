{
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.autoIndent": "advanced",
    "editor.fontLigatures": true,
    "editor.detectIndentation": false,
    "editor.guides.indentation": false,

    "guides.enabled": true,
    "guides.sendUsagesAndStats": false,
    "guides.active.hideOnSelection": false,
    "guides.indent.hideBackgroundOnSelection": false,
    "guides.active.gutter": true,
    "guides.normal.hideOnSelection": false,
    "guides.overrideDefault": true,
    "guides.stack.enabled": true,
    "guides.active.extraIndent": true,
    "guides.normal.style": "dotted",
    "guides.active.style": "dotted",
    "guides.stack.style": "dotted",
    "guides.normal.width": 2,
    "guides.stack.width": 2,
    "guides.active.width": 2,

    "bitbake.disableConfigModification": true,
    "bitbake.pathToBuildFolder": "${workspaceFolder}/build",

    "redhat.telemetry.enabled": false,
    "yaml.validate": false,
    "yaml.schemas": {
        "https://taskfile.dev/schema.json": "**/Taskfile.yml"
    },

    "python.analysis.enablePytestSupport": false,
    "python.analysis.exclude": [
        "**/node_modules",
        "**/__pycache__",
        "**/build",
        ".git",
        ".devbox/**",
        ".distrobox/**",
        "build/**",
        "yocto/**",
    ],

    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "build/downloads/*": true,
        "build/sstate-cache/*": true,
        "build/cache/*": true,
        "build/bitbake*": true,
        "build/tmp-*/*": true,
        "build/debos/*-cache/*": true,
        "build/debos/root/*": true,
    },
    "search.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        ".devbox/**": true,
        ".distrobox/**": true,
        "build/**": true,
        "build/debos/**": true,
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.hg/store/**": true,
        ".devbox/**": true,
        ".distrobox/**": true,
        "build/**": true,
        "src/**": true,
        "build/debos/**": true,
    }
}
