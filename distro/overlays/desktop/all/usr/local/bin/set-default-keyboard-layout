#!/usr/bin/env bash

whiptail \
    --title "Set Default Keyboard Layout" \
    --msgbox "You need root permissions to change the system keyboard layout, press <Ok> to continue..." \
    10 78

# GUI password prompt
pkexec bash << 'EOF'
dpkg-reconfigure keyboard-configuration \
    && whiptail \
        --title "Set Default Keyboard Layout" \
        --msgbox "You must restart your computer to apply the layout change" \
        10 78
EOF
